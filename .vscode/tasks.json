{
    "version": "2.0.0",
    "problemMatcher": "$gcc",
    "tasks": [
        {
            "label": "üßº clean",
            "type": "shell",
            "command": "make -j8 clean",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "‚öíÔ∏è build blue_pill: release",
            "type": "shell",
            "command": "make -j8 BUILD=Release",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "‚öíÔ∏è  build blue_pill: debug",
            "type": "shell",
            "command": "make -j8",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "‚ö°Ô∏è flash blue_pill",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f", "${workspaceFolder}/blue_pill/stlink.cfg",
                "-f", "${workspaceFolder}/blue_pill/stm32f1x.cfg",
                "-c", "program ${workspaceFolder}/blue_pill/build/blue_pill.elf verify reset exit"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "‚å®Ô∏è Setup python env",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "python3 -m venv .venv && source .venv/bin/activate && pip install --upgrade pip && pip install -r requirements.txt"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "‚ô∫ generate launch.json",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python3",
            "args": [
                "${workspaceFolder}/utils/gen-launch.py"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
